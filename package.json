{
  "name": "cross-toast",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.es.js",
      "require": "./dist/react/index.umd.js",
      "types": "./dist/react/index.d.ts"
    },
    "./vue": {
      "import": "./dist/vue/index.es.js",
      "require": "./dist/vue/index.umd.js",
      "types": "./dist/vue/index.d.ts"
    }
  },
  "scripts": {
    "dev:demo": "vite --config vite.demo.config.ts",
    "dev:lib": "vite --config vite.lib.config.ts",
    "build:lib": "tsc -p tsconfig.lib.json && vite build --config vite.lib.config.ts",
    "build:demo": "vite build --config vite.demo.config.ts",
    "preview:demo": "vite preview --config vite.demo.config.ts",
    "test": "vitest --environment jsdom",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "predeploy": "npm run build:demo",
    "deploy": "gh-pages -d demo-dist",
    "build": "npm run build:lib && npm run build:demo"
  },
  "keywords": [
    "toast",
    "notification",
    "react",
    "vue",
    "typescript"
  ],
  "author": "samuraikitts",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/vue": "^7.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vitest/coverage-v8": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "gh-pages": "^6.3.0",
    "jsdom": "^26.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^0.34.6"
  }
}
