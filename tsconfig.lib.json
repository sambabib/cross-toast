{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "types": ["node", "vite/client", "vue"],
    "allowJs": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "NodeNext",
  },
  "include": ["src/index.ts", "src/react/**/*", "src/vue/**/*", "src/shims-vue.d.ts"],
  "exclude": ["src/demo/**/*", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts"]
}
